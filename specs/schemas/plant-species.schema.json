{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://drplantes.com/schemas/plant-species.json",
  "title": "PlantSpecies",
  "description": "Schema for a plant species entity in the DrPlantes application",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier (UUID generated by database)",
      "format": "uuid"
    },
    "commonName": {
      "type": "string",
      "description": "Common name in English"
    },
    "latinName": {
      "type": "string",
      "description": "Scientific Latin name"
    },
    "lightPreference": {
      "type": "string",
      "enum": ["LOW", "MEDIUM", "HIGH"],
      "description": "Light requirement level"
    },
    "waterPreference": {
      "type": "string",
      "enum": ["LOW", "MEDIUM", "HIGH"],
      "description": "Water requirement level"
    },
    "humidityPreference": {
      "type": "string",
      "enum": ["LOW", "MEDIUM", "HIGH"],
      "description": "Humidity requirement level"
    },
    "toxicity": {
      "type": "string",
      "enum": ["NON_TOXIC", "TOXIC_PETS", "TOXIC_HUMANS", "TOXIC_PETS_AND_HUMANS"],
      "description": "Toxicity classification"
    },
    "difficulty": {
      "type": "string",
      "enum": ["EASY", "MEDIUM", "HARD"],
      "description": "Care difficulty level"
    },
    "recommendedIndoor": {
      "type": "boolean",
      "description": "Whether the plant is suitable for indoor environments"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Descriptive tags for categorization"
    },
    "shortDescription": {
      "type": "string",
      "description": "Brief description of the plant in 1-3 sentences"
    },
    "notes": {
      "type": "string",
      "description": "Additional care notes and warnings"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the record was created"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the record was last updated"
    }
  },
  "required": [
    "commonName",
    "latinName",
    "lightPreference",
    "waterPreference",
    "humidityPreference",
    "toxicity",
    "difficulty",
    "recommendedIndoor",
    "shortDescription"
  ]
}
